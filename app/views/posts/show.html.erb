<%= render 'astro/navbar' %>
<%= stylesheet_link_tag 'custom', media: 'all' %>
<%= render 'shared/flash_messages' %> 


<div class="row">
<%= link_to "Back To All Articles",posts_path(@post),  class: "btn btn-success col-xs-2 col-xs-offset-1" %>
</div>
<br>
<div class="container-fluid">
  <div class="row">
    
    <div class="well col-xs-8 col-xs-offset-1">
        <h2 style="col-xs-6 col-xs-offset-1"><%= @post.title %></h2>
        <hr>
        <p><%=simple_format(@post.body)  %></p>

        <hr>
         <div class="article_actions">
             
         </div>
    </div>
  </div>
    
    
</div>

<div class="container-fluid">
  <div class="row">
    <h1 style="margin-left:30px;">Comment</h1>
    <div class="col-xs-8 col-xs-offset-1">
      <%= render 'comments/form', comment: @comment %>
        <%= render 'shared/comments', comment: @comments %>
    </div>
  </div>
</div>


<%= render 'astro/footer' %>