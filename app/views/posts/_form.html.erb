<%=render 'shared/error',obj: @post %>
    <div class="row">
        <div class="col-md-12">
            <%= form_with(model: post, local: true) do |form| %>

                <div class="form-group">
                    <%= form.label :title,class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.text_field :title, id: :post_title ,class: "form-control",placeholder: "Title" %>
                        </div>
                </div>


                <div class="form-group field">
                    <%= form.label :body,class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.text_area :body, id: :post_body, :cols => "10", :rows => "10",class: "form-control",placeholder: "Body" %>
                        </div>
                </div>

                <div class="form-group actions">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= form.submit class: "btn btn-default" %>
                            
                    </div>
                </div>
                    </div>
                        </div>
            <% end %>
